#include <iostream>
using namespace std;
int main()
{
    int n= 5,c=0,c1=0,k=0;
    for(int i=1;i<=n;i++) {
        for(int j=1;j<=n-i;j++) {
            cout<< "  ";
            c++;
        }
        while(k!=2*i-1){
            if(c<=n-1){
                cout<<i+k<< " ";
                c++;
            }
            else {
                c1++;
                cout<<i+k-2*c1<<" ";
            }
            k++;
        }
        c1=c=k=0;
        cout << endl;
    }
    return 0;
}

