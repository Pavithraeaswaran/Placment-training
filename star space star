#include<iostream>
using namespace std;
int main(){
    int row;
    cin>>row;
    for(int i=1;i<=row;i++){
        for(int h=1;h<=i;h++){
            cout<<"*";
        }
        for(int k=1;k<=2*(row-i);k++){
            cout<<" ";
        }
        for(int j=1;j<=i;j++){
            cout<<"*";
        }
        cout<<endl;
    }
    cout<<endl;
}
