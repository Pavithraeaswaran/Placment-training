TO CHECK WHETHER THE ELEMENT PRESENT IN THE GIVEN ARRAY OR NOT 

#include<bits/stdc++.h>
using namespace std;
bool search(int arr[],int target,int n){
    for(int i=0;i<n;i++){
        if((arr[i])==target){
            return true;
        }
    }
        return false;
}
int main(){
    int arr[]={10,20,30,40};
    int target=22;
    int n=sizeof(arr)/sizeof(arr[0]);
    if(search(arr,target,n)){
        cout<<"present";
    }
    else{
        cout<<"absent";
    }
}
